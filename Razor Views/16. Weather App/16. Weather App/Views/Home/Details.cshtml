@model CityWeather

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather</title>
    <link rel="stylesheet" href="StyleSheet.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .weather-details {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 600px;
            width: 100%;
        }

            .weather-details div {
                flex: 1;
                text-align: center;
            }

                .weather-details div:first-child {
                    border-right: 1px solid #ccc;
                    padding-right: 20px;
                }

                .weather-details div:last-child {
                    padding-left: 20px;
                }

            .weather-details h2 {
                font-size: 1.5em;
                margin-bottom: 10px;
            }

            .weather-details p {
                font-size: 1em;
                color: #666;
            }

            .weather-details h1 {
                font-size: 2.5em;
                margin: 0;
                color: #333;
            }

            .weather-details span {
                font-size: 0.5em;
                vertical-align: top;
            }

        .back-link {
            margin-top: 20px;
            text-decoration: none;
            color: blue;
            font-size: 1em;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1>Weather</h1>
    <div class="weather-details">
        <div>
            <h2>@Model.CityName</h2>
            <p>@Model.DateAndTime.ToString("dd MMM yyyy hh:mm tt")</p>
        </div>
        <div>
            <h1>@Model.TemperatureFahrenheit<span>&deg;F</span></h1>
        </div>
    </div>
    <a href="/" class="back-link">Back to Weather Home Page</a>
</body>
</html>
